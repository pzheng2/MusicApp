<h1>Make Track</h1>

<form action="<%= tracks_url %>" method="POST">
  <input type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">

  <label for="album_id">Album ID</label>
  <input type="text"
         name="track[album_id]"
         id="album_id"
         value="<%= @track.album_id %>">
  <br>

  <label for="track_name">Track Name</label>
  <input type="text"
         name="track[track_name]"
         id="track_name"
         value="<%= @track.track_name %>">
  <br>

  <label for="lyrics">Lyrics</label>
  <input type="text"
         name="track[lyrics]"
         id="lyrics"
         value="<%= @track.lyrics %>">
  <br>

  <input type="submit">
</form>
